@model cicaudittrail.Models.CicUserRole
@* This partial view defines form fields that will appear when creating and editing entities *@

<div class="col-lg-12">
<div class="col-lg-6">
    <div class="form-group">
        <div class="editor-label">
            @Html.LabelFor(model => model.Username)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Username, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Username, null, new { @class = "has-error" })
        </div>
    </div>
</div>
<div class="col-lg-6">
    <div class="form-group">
        <div class="editor-label">
            @Html.LabelFor(model => model.CicRole)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.CicRoleId, ((IEnumerable<cicaudittrail.Models.CicRole>)ViewBag.PossibleCicRole).Select(option => new SelectListItem
   {
       Text = (option == null ? "None" : option.Name),
       Value = option.CicRoleId.ToString(),
       Selected = (Model != null) && (option.CicRoleId == Model.CicRoleId)
   }), "...", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.CicRoleId, null, new { @class = "has-error" })
        </div>
    </div>
    </div>
</div>
<div class="form-group">
</div>
