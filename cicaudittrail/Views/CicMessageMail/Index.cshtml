@model IEnumerable<cicaudittrail.Models.CicMessageMail>

@{
    ViewBag.Title = "Liste CicMessageMails";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Liste CicMessageMails
            </h1>
    </div>
    <!-- /.col-lg-12 -->
</div> 

@if (TempData["error"] != null) {
<div class="alert alert-danger" role="alert">
    @TempData["error"]
</div>
}

@if (TempData["message"] != null) {
<div class="alert alert-success" role="alert">
    @TempData["message"]
</div>
}

@if (TempData["warning"] != null) {
<div class="alert alert-warning" role="alert">
    @TempData["warning"]
</div>
}

<div class="createLink">
    <span class="label label-info">@Html.ActionLink("Nouveau CicMessageMail", "Create")</span>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                DataTables Advanced Tables
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                 <thead>
                   <tr>
  <th></th>
          <th>  
            @Html.DisplayNameFor(model => model.CicRequestResultsFollowed)
        </th>
        <th>  
            @Html.DisplayNameFor(model => model.MessageSent)
        </th>
        <th>  
            @Html.DisplayNameFor(model => model.ObjetMessage)
        </th>
        <th>  
            @Html.DisplayNameFor(model => model.DateMessageSent)
        </th>
        <th>  
            @Html.DisplayNameFor(model => model.UserMessageSent)
        </th>
        <th>  
            @Html.DisplayNameFor(model => model.MessageReceived)
        </th>
        <th>  
            @Html.DisplayNameFor(model => model.DateMessageReceived)
        </th>
        <th>  
            @Html.DisplayNameFor(model => model.UserResponseSent)
        </th>
 
   </tr>
                  </thead>

                    <tbody>
                      @foreach (var item in Model) {
   <tr>
           <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.CicMessageMailId }) |
            @Html.ActionLink("Details", "Details", new { id=item.CicMessageMailId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.CicMessageMailId })
        </td>
        <td>
			@Html.DisplayTextFor(_ => item.CicRequestResultsFollowed).ToString()
        </td>
        <td>
			@item.MessageSent
        </td>
        <td>
			@item.ObjetMessage
        </td>
        <td>
			@String.Format("{0:g}", item.DateMessageSent)
        </td>
        <td>
			@item.UserMessageSent
        </td>
        <td>
			@item.MessageReceived
        </td>
        <td>
			@String.Format("{0:g}", item.DateMessageReceived)
        </td>
        <td>
			@item.UserResponseSent
        </td>


    </tr>
   }


                    </tbody>
                </table>
                </div>
            </div>
        </div>
    </div>
</div>
 
 
