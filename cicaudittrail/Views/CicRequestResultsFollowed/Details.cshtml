@model IEnumerable<object[]>
@{
    ViewBag.Title = "Consultation d'un suivi effectué";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Consultation d'un suivi effectué
        </h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
@if (TempData["error"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["error"]
    </div>
}
@if (TempData["message"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["message"]
    </div>
}
@if (TempData["warning"] != null)
{
    <div class="alert alert-warning" role="alert">
        @TempData["warning"]
    </div>
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Détails suivi
            </div>
            <div class="panel-body">
                <div class="row" style="margin-left: -15px">
                    <div class="col-lg-12">
                        <fieldset disabled>
                            <div class="form-group">
                                <label for="CicRequest">
                                    Requête
                                </label>
                                <input class="form-control" id="CicRequest" type="text" placeholder="@ViewData["Libelle"]"
            readonly>
                            </div>
                            <div class="form-group">
                                <label for="CicRequest">
                                    Suivi
                                </label>
                                <input class="form-control" id="CicRequest" type="text" placeholder="Suivi effectué le @String.Format("{0:g}", ViewData["DateCreated"]), par @ViewData["UserCreated"]"
            readonly>
                            </div>
                            <div class="form-group">
                                <label for="Comments">
                                    Commentaires
                                </label>
                                <textarea class="form-control" id="Comments" placeholder="@ViewData["Comments"]" rows="5"
            readonly></textarea>
                            </div>
                        </fieldset>
                        @*<p>
                            <button type="button" class="btn btn-primary">
                                @Html.ActionLink("Modifier", "Edit", new { id = Model.CicRequestResultsFollowedId })
                            </button>
                            <button type="button" class="btn btn-default">
                                @Html.ActionLink("Retour", "Index")
                            </button>
                        </p>*@
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<p>  
    <button type="button" class="btn btn-default">
        @Html.ActionLink("Retour", "Index")
    </button>
</p>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Element suivi
            </div>
            <div class="panel-body">
                <div class="row" style="margin-left: -15px">
                    <div class="col-lg-12">
                        <table class="table table-striped table-bordered table-hover" id="resultsTable">
                            @{ var count = 0; }
                            @foreach (var row in Model)
                            {   
                                <tr>
                                    @if (count == 0)
                                    {
                                        //Gestion affichage tbody du tableau

                                        var countint = 0;
                                        foreach (var column in row)
                                        {
                                            if (countint > 0)
                                            {
                                        <th>@column
                                        </th>
                                            }
                                            countint++;
                                        }
                                    }
                                    else
                                    {
                                        //Gestion affichage des resultats de la requete
                                        var countint = 0;
                                        foreach (var column in row)
                                        {
                                            if (countint > 0)
                                            {
                                        <td>@column
                                        </td>
                                            }
                                            countint++;
                                        }
                                    }
                                </tr>
                                           
                                    count++;
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
