@model IEnumerable<cicaudittrail.Models.CicRequestResultsFollowed>
@{
    ViewBag.Title = "Demande de justificatifs pour les suivis";
}
@Scripts.Render("~/bundles/datatablejs")
@Styles.Render("~/Content/datatablecss")
<script type="text/javascript" charset="utf-8">
    $(document).ready(function () {
        $("#suiviTable").dataTable({ bJQueryUI: false, sPaginationType: "full_numbers" });
    });
  
</script>
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Demande de justificatifs pour les suivis</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
@if (TempData["error"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["error"]
    </div>
}
@if (TempData["message"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["message"]
    </div>
}
@if (TempData["warning"] != null)
{
    <div class="alert alert-warning" role="alert">
        @TempData["warning"]
    </div>
}

@using (Html.BeginForm("PopulateBody", "CicRequestResultsFollowed", FormMethod.Post))
{
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Basic Form Elements
            </div>
            <div class="panel-body">
                <div class="row" style="margin-left: -15px">
                    <div class="col-lg-12">
                        <table class="table table-striped table-bordered table-hover" id="suiviTable">
                            <thead>
                                <tr>
                                    <th>
                                    </th>
                                    <th>
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.CicRequest)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.DateCreated)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.UserCreated)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Comments)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Statut)
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.ActionLink("Details", "Details", new { id = item.CicRequestResultsFollowedId })
                                        </td>
                                        @Html.CheckBox("coche." + item.CicRequestResultsFollowedId)
                                        <td>
                                            @(item.CicRequest == null ? "None" : item.CicRequest.Libelle)
                                        </td>
                                        <td>
                                            @String.Format("{0:g}", item.DateCreated)
                                        </td>
                                        <td>
                                            @item.UserCreated
                                        </td>
                                        <td>
                                            @item.Comments
                                        </td>
                                        <td>
                                            @{var statut = "CicRequestResultsFollowed_" + @item.Statut;}
                                            @Html.Raw(cicaudittrail.Src.ToolsClass.GetResourceValueForVariable(statut))
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

}