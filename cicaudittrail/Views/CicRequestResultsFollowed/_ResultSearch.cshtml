@model IEnumerable<cicaudittrail.Models.CicRequestResultsFollowed>
@Scripts.Render("~/bundles/datatablejs")
@Styles.Render("~/Content/datatablecss")
<script type="text/javascript" charset="utf-8">
    $(document).ready(function () {
        $("#resultsTable").dataTable({ bJQueryUI: false, sPaginationType: "full_numbers" });
    });
  
</script>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Resultats recherche
            </div>
            <div class="panel-body">
                <div class="row" style="margin-left: -15px">
                    <div class="col-lg-12">
                        <table class="table table-striped table-bordered table-hover" id="resultsTable">
                            <thead>
                                <tr>
                                    <th>
                                    </th>
                                    <th>
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.CicRequest)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.DateCreated)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.UserCreated)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Comments)
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.ActionLink("Consulter", "Details", new { id = item.CicRequestResultsFollowedId }, new { target = "_blank" })
                                        </td>
                                        <td>
                                            @Ajax.ActionLink("Aperçu", "AjaxDetails", new { id = item.CicRequestResultsFollowedId }, new AjaxOptions { HttpMethod = "GET", InsertionMode = InsertionMode.Replace, UpdateTargetId = "followedContent1" })
                                        </td>
                                        <td>
                                            @(item.CicRequest == null ? "None" : item.CicRequest.Libelle)
                                        </td>
                                        <td>
                                            @String.Format("{0:g}", item.DateCreated)
                                        </td>
                                        <td>
                                            @item.UserCreated
                                        </td>
                                        <td>
                                            @item.Comments
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/bundles/jqueryunobtrusive")
<div id="followedContent1">
</div>
