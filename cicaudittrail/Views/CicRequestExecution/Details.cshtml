@model cicaudittrail.Models.CicRequestExecution
@{
    ViewBag.Title = "Piste d'audit";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Piste d'audit
        </h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
@if (TempData["error"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["error"]
    </div>
}
@if (TempData["message"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["message"]
    </div>
}
@if (TempData["warning"] != null)
{
    <div class="alert alert-warning" role="alert">
        @TempData["warning"]
    </div>
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="row" style="margin-left: -15px">
                    <div class="col-lg-12">
                        <fieldset disabled>
                            <div class="form-group">
                                <label for="CicRequest">
                                    Requête
                                </label>
                                <input class="form-control" id="CicRequest" type="text" placeholder="@(Model.CicRequest == null ? "None" : Model.CicRequest.Libelle)"
            readonly>
                            </div>
                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label for="CicRequestUserUpdated">
                                        Action
                                    </label>
                                    @{var action = "CicRequestExecution_" + @Model.Action;}
                                    <input class="form-control" id="CicRequestUserUpdated" type="text" placeholder="@Html.Raw(cicaudittrail.Src.ToolsClass.GetResourceValueForVariable(action))"
            readonly>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label for="CicRequestDateUpdated">
                                        Date
                                    </label>
                                    <input class="form-control" id="CicRequestDateUpdated" type="text" placeholder="@String.Format("{0:g}", Model.DateAction)"
            readonly>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label for="CicRequestUserExecuted">
                                        Effectuée par
                                    </label>
                                    <input class="form-control" id="CicRequestUserExecuted" type="text" placeholder="@Model.UserAction"
            readonly>
                                </div>
                            </div>
                            @if (Model.CicRequestResultsFollowedId != null)
                            {
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label for="CicRequestUserExecuted">
                                            Suivi concerné
                                        </label>
                                        <div class="form-control">
                                            @Html.ActionLink("Suivi", "Details", "CicRequestResultsFollowed", new { id = Model.CicRequestResultsFollowedId }, null)
                                        </div>
                                        @*<input class="form-control" id="CicRequestUserExecuted" type="text" value=" @Html.ActionLink("Retour", "Index")"
            readonly>*@
                                    </div>
                                </div>
                            }
                            @if (Model.FileName != null)
                            {
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label for="CicRequestUserExecuted">
                                            Fichier centif
                                        </label>
                                        <div class="form-control">
                                            <a href="@Url.Action("Download", "CicRequestExecution", new { id = Model.CicRequestExecutionId })" target="_blank">
                                                <i class="fa fa-paperclip fa-fw"></i>Téléchargez le fichier tiré</a>
                                        </div>
                                        @*<input class="form-control" id="CicRequestUserExecuted" type="text" value=" @Html.ActionLink("Retour", "Index")"
            readonly>*@
                                    </div>
                                </div>
                            }
                            @if (new List<String>() { "F", "FC", "FA", "MS", "CT" }.Contains(Model.Action))
                            {
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label for="CicRequestResultsFollowed">
                                            Commentaire suivi
                                        </label>
                                        <input class="form-control" id="CicRequestResultsFollowed" type="text" placeholder="@Html.DisplayTextFor(_ => Model.CicRequestResultsFollowed.Comments).ToString()"
            readonly>
                                    </div>
                                </div>

                            }
                        </fieldset>
                        <p>
                            <button type="button" class="btn btn-default">
                                @Html.ActionLink("Retour", "Index")
                            </button>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
