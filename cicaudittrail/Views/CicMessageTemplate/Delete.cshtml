@model cicaudittrail.Models.CicMessageTemplate

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>


@if (TempData["error"] != null) {
<div class="alert alert-danger" role="alert">
    @TempData["error"]
</div>
}

@if (TempData["message"] != null) {
<div class="alert alert-success" role="alert">
    @TempData["message"]
</div>
}

@if (TempData["warning"] != null) {
<div class="alert alert-warning" role="alert">
    @TempData["warning"]
</div>
}

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>CicMessageTemplate</legend>

    <div class="display-label">Code</div>
    <div class="display-field">@Model.Code</div>

    <div class="display-label">Libelle</div>
    <div class="display-field">@Model.Libelle</div>

    <div class="display-label">ObjetMail</div>
    <div class="display-field">@Model.ObjetMail</div>

    <div class="display-label">ContenuMail</div>
    <div class="display-field">@Model.ContenuMail</div>

    <div class="display-label">DateCreated</div>
    <div class="display-field">@String.Format("{0:g}", Model.DateCreated)</div>

    <div class="display-label">UserCreated</div>
    <div class="display-field">@Model.UserCreated</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


