@model cicaudittrail.Models.CicMessageTemplate
@{
    ViewBag.Title = "Consultation modèle de message";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Consultation modèle de message
        </h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
@if (TempData["error"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["error"]
    </div>
}
@if (TempData["message"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["message"]
    </div>
}
@if (TempData["warning"] != null)
{
    <div class="alert alert-warning" role="alert">
        @TempData["warning"]
    </div>
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            @*<div class="panel-heading">
                Basic Form Elements
            </div>*@
            <div class="panel-body">
                <div class="row" style="margin-left: -15px">
                    <div class="col-lg-12">
                        <fieldset disabled>
                            <div class="form-group">
                                <label for="Code">
                                    Code
                                </label>
                                <input class="form-control" id="Code" type="text" placeholder="@Model.Code"
            readonly>
                            </div>
                            <div class="form-group">
                                <label for="Libelle">
                                    Libelle
                                </label>
                                <input class="form-control" id="Libelle" type="text" placeholder="@Model.Libelle"
            readonly>
                            </div>
                            <div class="form-group">
                                <label for="ObjetMail">
                                    ObjetMail
                                </label>
                                <input class="form-control" id="ObjetMail" type="text" placeholder="@Model.ObjetMail"
            readonly>
                            </div>
                            <div class="form-group">
                                <label for="ContenuMail">
                                    ContenuMail
                                </label>
                                @{var text = @MvcHtmlString.Create(HttpUtility.HtmlDecode(@Model.ContenuMail));}
                                <textarea class="form-control" id="ContenuMail" placeholder="@text"
                                    rows="10" readonly></textarea> 
                            </div>
                        </fieldset>
                        <p>
                            <button type="button" class="btn btn-primary">
                                @Html.ActionLink("Modifier", "Edit", new { id = Model.CicMessageTemplateId })
                            </button>
                            <button type="button" class="btn btn-default">
                                @Html.ActionLink("Retour", "Index")
                            </button>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
