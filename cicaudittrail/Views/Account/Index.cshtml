@{
    Layout = null;
}
@model cicaudittrail.Models.LoginModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width" />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <title>SB Admin 2 - Bootstrap Admin Theme</title>
    <!--Javascript -->
    @Scripts.Render("~/bundles/jquery")
    <!--CSS -->
    @Styles.Render("~/Content/bootstrapcss")
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { ReturnUrl = ViewBag.ReturnUrl }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <div class="container">
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    <div class="login-panel panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">
                                Connexion</h3>
                        </div>
                        <div class="panel-body">
                            <form role="form">
                            <fieldset>
                                <div class="form-group">
                                    <!--<input class="form-control" placeholder="E-mail" name="email" type="email" autofocus>-->
                                    @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @placeholder = "Compte windows" })
                                    @Html.ValidationMessageFor(model => model.UserName, null, new { @class = "has-error" })
                                </div>
                                <div class="form-group">
                                    @Html.PasswordFor(model => model.Password, new { @class = "form-control", @placeholder = "Mot de passe windows" })
                                    @Html.ValidationMessageFor(model => model.Password, null, new { @class = "has-error" })
                                </div>
                                <div class="checkbox">
                                    <label>
                                        @Html.CheckBox("RememberMe") Mémoriser le mot de passe ? @* <input name="remember" type="checkbox" value="Mémoriser le mot de passe ?">Mémoriser
                                    le mot de passe ?*@
                                    </label>
                                </div>
                                <!-- Change this to a button or input when using this as a form -->
                                <input class="btn btn-lg btn-success btn-block" type="submit" value="Se connecter">
                            </fieldset>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div> 
        
        <!-- JavaScript -->  
        @Scripts.Render("~/bundles/bootstrapjs")
    }
</body>
</html>
